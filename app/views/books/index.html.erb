<body>

<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<!-- book list -->
<h1>Books</h1>

<table>
	<tr><th>Title<th>Body

 <% @books.each do |book| %>
<tr>
  <td><%= book.title %>
	<td><%= book.body %>
	<td><%= link_to "Show", book_path(book.id),class:"btn" %>
	<td><%= link_to "Edit", edit_book_path(book.id),class:"btn" %>
	<td><%= link_to "Destroy",book,class:"btn", method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>

  <% end %>

</table>


<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<% if @book.errors.any? %>
  	<div class="alert">
    	<ul>
      	<% @book.errors.full_messages.each do |msg| %>
      	<%= msg %>
      	<% end %>
    	</ul>
  	</div>
	<% end %>

  <h4 class="form">Title</h4>
  <%= f.text_field :title %>

  <h4 class="form">Body</h4>
  <%= f.text_area :body %>

  <h4 class="form"><%= f.submit 'Create Book' %></h4>

<% end %>

</body>